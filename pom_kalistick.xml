<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>com.silverpeas</groupId>
    <artifactId>parent</artifactId>
    <version>15-SNAPSHOT</version>
  </parent>

  <description>
    Silverpeas is a Collaborative Portal tool usefull to build your Intranet/Extranet.Silverpeas is
    used to classify and organize the contents in themes independant of the spaces and folders in
    which they are stored. These contents can be shared through collabotaive tools such as blog, wikis,
    images gallery and its own Enterprise Content Management tool.
  </description>

  <scm>
    <connection>scm:svn:https://www.silverpeas.org/svn/silverpeas/core/trunk</connection>
    <developerConnection>scm:svn:https://www.silverpeas.org/svn/silverpeas/core/trunk</developerConnection>
    <url>http://www.silverpeas.org/websvn/repos/Silverpeas/list/core/trunk/</url>
  </scm>

  <repositories>
    <repository>
      <id>NexusSilverpeas</id>
      <layout>default</layout>
      <name>Silverpeas Repository</name>
      <url>http://www.silverpeas.org/nexus/content/groups/silverpeas</url>
      <releases>
        <enabled>true</enabled>
      </releases>
      <snapshots>
        <enabled>true</enabled>
      </snapshots>
    </repository>
  </repositories>
  
  <groupId>com.silverpeas</groupId>
  <artifactId>core</artifactId>
  <version>5.4-SNAPSHOT</version>
  <packaging>pom</packaging>
  <name>Silverpeas Core</name>

  <build>
    <plugins>
      <plugin>
        <groupId>com.kalistick.soa</groupId>
        <artifactId>ks-agent</artifactId>
        <version>2.2</version>
        <configuration>
          <configFile>${project.basedir}/src/config/agent_cockpit/kalistick-new.xml</configFile>
          <version>${project.version}-${build.timestamp}</version>
          <excludes>
            <exclude>**/**/*.iml</exclude>
          </excludes>
        </configuration>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>copy-dependencies</id>
            <phase>package</phase>
            <goals>
              <goal>copy-dependencies</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <modules>
    <module>test-core</module>
    <module>lib-core</module>
    <module>it-test-core</module>
    <module>ejb-core</module>
    <module>web-core</module>
    <module>war-core</module>
    <module>config-core</module>
  </modules>
</project>
