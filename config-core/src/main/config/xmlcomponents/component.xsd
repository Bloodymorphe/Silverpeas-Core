  <xs:complexType name="ProfileType" >    
    <xs:complexContent>     
      <xs:extension base="multilang" >
        <xs:attribute type="xs:string" name="name"/>
      </xs:extension>
    </xs:complexContent>    
  </xs:complexType>
  <xs:complexType name="ProfilesType">
    <xs:sequence>
      <xs:element type="ProfileType" name="profile" maxOccurs="unbounded" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="multilang">
    <xs:sequence>
      <xs:element type="xs:string" name="fr" />
      <xs:element type="xs:string" name="en" />
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="ParameterType">
    <xs:sequence>
      <xs:element name="name" type="xs:string" />
      <xs:element name="label" type="multilang" />
      <xs:element name="order" type="xs:int" />      
      <xs:element name="mandatory" type="boolean" />
        <xs:element name="value" type="xs:string"/>
        <xs:element type="ParameterOptionsType" name="options" maxOccurs="unbounded" minOccurs="0"/>
      <xs:element name="type">
        <xs:simpleType>
          <xs:restriction base="xs:string">
            <xs:enumeration value="checkbox"/>
            <xs:enumeration value="select"/>
            <xs:enumeration value="xmltemplates"/>
            <xs:enumeration value="text"/>
          </xs:restriction>
        </xs:simpleType>
      </xs:element>
      <xs:element name="size" type="xs:int" minOccurs="0" />
      <xs:element type="xs:string" name="updatable"/>
      <xs:element type="multilang" name="help"/>
      <xs:element type="boolean" name="usedForPersonalSpace" minOccurs="0" maxOccurs="1" />  
    </xs:sequence>   
  </xs:complexType>
  <xs:simpleType name="UpdatableType">
    <xs:restriction base="xs:string">
      <xs:enumeration value="always"/>
      <xs:enumeration value="creation"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="ParameterOptionType">
    <xs:sequence>
      <xs:element name="name" type="multilang"/>
      <xs:element name="value" type="xs:string"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="ParameterOptionsType">
    <xs:sequence>
      <xs:element type="ParameterOptionType" name="option" maxOccurs="unbounded" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
  <xs:simpleType name="boolean">
    <xs:restriction base="xs:string">
      <xs:enumeration value="Y"/>
      <xs:enumeration value="N"/>
    </xs:restriction>
  </xs:simpleType>
  <xs:complexType name="ParametersType">
    <xs:sequence>
      <xs:element type="ParameterType" name="parameter" maxOccurs="unbounded" minOccurs="0"/>
    </xs:sequence>
  </xs:complexType>
  <xs:complexType name="WAComponentType">
    <xs:sequence>
      <xs:element type="xs:string" name="name"/>
      <xs:element type="multilang" name="label"/>
      <xs:element type="multilang" name="description"/>
      <xs:element type="multilang" name="suite"/>
      <xs:element type="boolean" name="visible"/>     
      <xs:element type="boolean" name="visibleInPersonalSpace" minOccurs="0" maxOccurs="1" />
      <xs:element type="boolean" name="portlet"/>
      <xs:element type="xs:string" name="instanceClassName"/>
      <xs:element type="ProfilesType" name="profiles"/>
      <xs:element type="ParametersType" name="parameters" minOccurs="0" maxOccurs="unbounded"/>
    </xs:sequence>
  </xs:complexType>
</xs:schema>