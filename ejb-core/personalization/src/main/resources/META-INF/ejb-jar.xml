<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE ejb-jar PUBLIC '-//Sun Microsystems, Inc.//DTD Enterprise JavaBeans 2.0//EN' 'http://java.sun.com/dtd/ejb-jar_2_0.dtd'>

<ejb-jar>
  <description>no description</description>
  <display-name>PersonalizationJar</display-name>
  <enterprise-beans>
    <session>
      <description>no description</description>
      <display-name>ejb/PersonalizationBm</display-name>
      <ejb-name>ejb/PersonalizationBm</ejb-name>
      <home>com.stratelia.webactiv.personalization.control.ejb.PersonalizationBmHome</home>
      <remote>com.stratelia.webactiv.personalization.control.ejb.PersonalizationBm</remote>
      <ejb-class>com.stratelia.webactiv.personalization.control.ejb.PersonalizationBmEJB</ejb-class>
      <session-type>Stateful</session-type>
      <transaction-type>Container</transaction-type>
      <resource-ref>
	<res-ref-name>jdbc/Silverpeas</res-ref-name>
	<res-type>javax.sql.DataSource</res-type>
	<res-auth>Container</res-auth>
      </resource-ref>
    </session>
  </enterprise-beans>
  <assembly-descriptor>
    <container-transaction>
      <method>
	<ejb-name>ejb/PersonalizationBm</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>*</method-name>
      </method>
      <trans-attribute>NotSupported</trans-attribute>
    </container-transaction>

    <container-transaction>
      <method>
	<ejb-name>ejb/PersonalizationBm</ejb-name>
	<method-intf>Remote</method-intf>
	<method-name>setFavoriteLook</method-name>
      </method>
      <trans-attribute>Supports</trans-attribute>
    </container-transaction>
  </assembly-descriptor>
</ejb-jar>